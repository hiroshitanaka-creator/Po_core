# Po_core Environment Variables
# ===============================
# Copy this file to .env and fill in your values.
#
#   cp .env.example .env
#
# All variables use the PO_ prefix.
# Values shown here are the defaults.

# ---- Server ----
PO_HOST=0.0.0.0
PO_PORT=8000
PO_WORKERS=1
PO_LOG_LEVEL=info
PO_RELOAD=false

# ---- Authentication ----
# Set a strong random key for production.
# Leave empty or set PO_SKIP_AUTH=true for local development.
PO_API_KEY=
PO_SKIP_AUTH=true

# ---- Po_core Engine ----
PO_ENABLE_SOLARWILL=true
PO_ENABLE_INTENTION_GATE=true
PO_ENABLE_ACTION_GATE=true

# ---- Trace Store ----
# Max number of sessions to retain in memory (LRU eviction)
PO_MAX_TRACE_SESSIONS=1000
